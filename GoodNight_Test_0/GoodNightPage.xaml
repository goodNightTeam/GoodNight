<Page
    x:Class="GoodNight_Test_0.GoodNightPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GoodNight_Test_0"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Pivot Title="晚安">
            <PivotItem Header="晚安自己">
                <Grid>
                    <Grid Margin="0,0,0,421">

                        <CheckBox Margin="310,-3,-132,-6" Width="42" Height="67" />
                        <TextBlock HorizontalAlignment="Left"  TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="43" Width="96" FontSize="22" Margin="12,12,0,0"/>
                        <TimePicker HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </Grid>
                    <Button Margin="272,399,0,0" Padding="0,-5,0,0" Height="78" Width="64" MinWidth="50" MinHeight="50" HorizontalAlignment="Left">
                        <TextBlock Text="Speak" FontSize="20" >

                        </TextBlock>
                    </Button>
                    <ListView x:Name="checklist_time_peroid" HorizontalAlignment="Left" Height="340" Margin="0,63,0,0" VerticalAlignment="Top" Width="346">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding name}" FontSize="22" Margin="12"></TextBlock>
                                    <Button Content="{Binding time_peroid_string}" FontSize="25" Width="60" Height="60" MinWidth="20" MinHeight="20">

                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </PivotItem>
            <PivotItem Header="晚安朋友">
                <Grid>
                    <Grid Margin="0,0,0,424"></Grid>
                    <ListView Margin="0,81,0,10">

                    </ListView>
                </Grid>
            </PivotItem>
            <PivotItem Header="更多">
                <Grid/>
            </PivotItem>
        </Pivot>


    </Grid>
</Page>
